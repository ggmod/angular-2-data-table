{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "types" : ["node"],
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
